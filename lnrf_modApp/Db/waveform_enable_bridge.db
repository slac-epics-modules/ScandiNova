record (bo, "$(P):WaveformCvdEnable") {
	field(DESC, "Enable/disable Cvd waveform download")
	field(ONAM, "enabled")
	field(ZNAM, "disabled")
}

record (bo, "$(P):WaveformCtEnable") {
	field(DESC, "Enable/disable Ct waveform download")
	field(ONAM, "enabled")
	field(ZNAM, "disabled")
}

record (bo, "$(P):WaveformRfFwdEnable") {
	field(DESC, "Enable/disable RfFwd waveform download")
	field(ONAM, "enabled")
	field(ZNAM, "disabled")
}

record (bo, "$(P):WaveformRfRflEnable") {
	field(DESC, "Enable/disable RfRfl waveform download")
	field(ONAM, "enabled")
	field(ZNAM, "disabled")
}


record (aSub, "$(P):WaveformRequestBridge") {
	field(SNAM, "handle_waveform_request")

# INPUTS

	field(INPA, "$(P):WaveformCvdEnable CP")
	field(FTA, "LONG")
	field(NOA, "1")

	field(INPB, "$(P):WaveformCtEnable CP")
	field(FTB, "LONG")
	field(NOB, "1")

	field(INPC, "$(P):WaveformRfFwdEnable CP")
	field(FTC, "LONG")
	field(NOC, "1")

	field(INPD, "$(P):WaveformRfRflEnable CP")
	field(FTD, "LONG")
	field(NOD, "1")

# OUTPUTS

	field(OUTA, "$(P):WaveformTypeSet PP")
	field(FTVA, "LONG")
	field(NOVA, "1")

	field(OUTB, "$(P):WaveformCvd.NELM PP")
	field(FTVB, "LONG")
	field(NOVB, "1")

	field(OUTC, "$(P):WaveformCt.NELM PP")
	field(FTVC, "LONG")
	field(NOVC, "1")

	field(OUTD, "$(P):WaveformRfFwd.NELM PP")
	field(FTVD, "LONG")
	field(NOVD, "1")

	field(OUTE, "$(P):WaveformRfRfl.NELM PP")
	field(FTVE, "LONG")
	field(NOVE, "1")
}
